{
  "name": "My Docker Compose Runtime",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "app",  // Specify the primary service (e.g., your main app container)
  "workspaceFolder": "/workspace",
  "forwardPorts": [3000, 5000],  // Expose app and database ports
  "postCreateCommand": "docker-compose up -d",  // Start services after creation
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers"
      ]
    }
  }
}
