{
  "id": null,
  "title": "Recipe App Monitoring",
  "tags": ["recipe-app"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "red",
                "value": 50
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Total Recipes",
      "type": "stat",
      "targets": [
        {
          "expr": "recipes_total",
          "legendFormat": "Recipes",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Active Users",
      "type": "stat",
      "targets": [
        {
          "expr": "active_users_total",
          "legendFormat": "Active Users",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 4,
      "title": "HTTP Requests Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{route}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 18,
        "x": 0,
        "y": 8
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s",
  "schemaVersion": 27,
  "version": 0
}
